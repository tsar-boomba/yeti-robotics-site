{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:mdx/recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended",
		"prettier"
	],
	"plugins": ["@typescript-eslint", "prettier"],
	"settings": {
		"mdx/code-blocks": true,
		"import/resolver": {
			"alias": [["@", "./src"]]
		}
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"node": true
	},
	"overrides": [
		{
			"files": ["*.md"],
			"extends": "plugin:mdx/recommended",
			"rules": {
				"prettier/prettier": [
					2,
					{
						"parser": "markdown"
					}
				]
			}
		},
		{
			"files": ["*.mdx"],
			"extends": "plugin:mdx/overrides"
		},
		{
			"files": "**/*.{md,mdx}/**",
			"extends": "plugin:mdx/code-blocks"
		}
	],
	"rules": {
		"no-constant-condition": "off",
		"quotes": "off",
		"@typescript-eslint/quotes": [
			0,
			"single",
			{
				"avoidEscape": true
			}
		],
		"@typescript-eslint/explicit-module-boundary-types": "off",
		"indent": "off",
		"prettier/prettier": [
			"error",
			{
				"semi": true,
				"trailingComma": "all",
				"endOfLine": "auto",
				"printWidth": 100,
				"tabWidth": 4,
				"useTabs": true,
				"bracketSpacing": true,
				"singleQuote": true,
				"jsxSingleQuote": true
			}
		]
	}
}
